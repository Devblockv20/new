<div class="home-background-login">
  <%= image_tag "GFY.jpg" %>
</div>
<div id='loginBackground'></div>
  <div id='loginBox'>
    <div id='background-tab-right'>Sign Up</div>
    <div id='background-tab-left'>Log In</div>
    <%= form_tag sessions_path do %>
      <div class="form-field-top">
        <%= label_tag :email %><br>
        <%= email_field_tag :email, params[:email], placeholder: "ex. name@domain.com", id:'email-box' %>
      </div>
      <div class="form-field">
        <%= label_tag :password %><br>
        <%= password_field_tag :password %>
      </div>
      <div id='login-submit-div'><%= submit_tag "Log In" , class:'login-submit'%></div>
    <% end %>
  </div>

<%= link_to (image_tag 'Delete-50.png', id:'login-x'), root_path %>
