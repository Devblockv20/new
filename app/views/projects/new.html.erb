<h1 class="page-heading">Create a Project</h1>

<%= form_for @project do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :picture_url %><br>
    <%= f.text_field :picture_url %>
  </div>
  <div class="field">
    <%= f.label :max_shares %><br>
    <%= f.number_field :max_shares %>
  </div>
  <div class="field">
    <%= f.label :deadline %><br>
    <%= f.datetime_select :deadline %>
  </div>

    <h2>Shares Available For Sale</h2>
    <%= f.fields_for :shares, html:{id: 'shares'} do |share| %>
      <%= render 'share_fields', f: share%>

      <%= link_to_add_association 'add share type', f, :shares, {class:'links'} %>

    <% end %>


  <%= f.submit %>
<% end %>
