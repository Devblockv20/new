<!DOCTYPE html>
<html>
<head>
  <title>Gofundyourself</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300&subset=latin,greek' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Lobster' rel='stylesheet' type='text/css'>
</head>
<body>
  <div class="navigation-bar">
    <%= link_to "GoFundYourself", '/', class:"homeButton" %>
  <% if current_user %>
    <%= link_to "View Projects", projects_url, class:"viewProject" %><%= link_to 'View Profile', user_path(current_user), class:"viewProject" %> <%= link_to "Logout", session_path("this session"), class:"signUpButton", :method => :delete %>
  <% else %>
    <%= link_to "View Projects", projects_url, class:"viewProject" %><%= link_to "Login", new_session_path, class:"loginButton" %> <%= link_to "Sign-Up", new_user_path, class:"signUpButton" %>
  <% end %>
  </div>
  <% flash.each do |key, value | %>
    <div id='flash_message'><%= value %></div>
  <% end %>
  <%= yield %>

</body>
</html>
